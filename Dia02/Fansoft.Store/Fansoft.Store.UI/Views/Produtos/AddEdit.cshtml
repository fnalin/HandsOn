@model Produto

@{
    ViewBag.Title = "Adicionar Produto";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" asp-for="Nome" class="form-control" />
        <small class="is-invalid">
            <span asp-validation-for="Nome"></span>
        </small>
        @*@Html.TextBoxFor(m=>m.Nome, new { @class="form-control"})*@
        @*<input type="text" name="nome" value="@Model?.Nome" class="form-control" />*@
    </div>

    <div class="form-group">
        <label>TipoProduto</label>
        <select asp-for="TipoProdutoId" asp-items="@ViewBag.Tipos" class="form-control">
            <option value="">Selecione ...</option>

        </select>
        <small class="is-invalid">
            <span asp-validation-for="TipoProdutoId"></span>
        </small>
    </div>

    <div class="form-group">
        <label>Valor</label>
        <input type="text" asp-for="Valor" class="form-control" />
        <small class="is-invalid">
            <span asp-validation-for="Valor"></span>
        </small>
    </div>

    <button class="btn btn-secondary">Salvar</button>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Produtos">Voltar</a>
</form>

@section scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/jquery.validate.methods.pt_BR.js"></script>
    <script src="~/scripts/bootstrap.validate.js"></script>
}