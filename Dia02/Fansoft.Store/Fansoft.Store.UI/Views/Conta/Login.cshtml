@model LoginVM

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>


<div class="row  justify-content-center">
    <div class="col-sm-8">
        <form method="post">

            <div class="form-group">
                <label>Email</label>
                <input autofocus type="text" asp-for="Email" class="form-control" />
                <small class="is-invalid">
                    <span asp-validation-for="Email"></span>
                </small>
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input type="password" asp-for="Senha" class="form-control" />
                <small class="is-invalid">
                    <span asp-validation-for="Senha"></span>
                </small>
            </div>


            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Lembrar">
                <label class="form-check-label" asp-for="Lembrar">
                </label>
            </div>

            <br />

            <div class="form-group">
                <button class="btn btn-secondary">Entrar</button>
                <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/jquery.validate.methods.pt_BR.js"></script>
    <script src="~/scripts/bootstrap.validate.js"></script>
}